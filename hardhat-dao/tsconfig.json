{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "types": ["node", "hardhat"]
  },
  "include": ["./scripts", "./deploy", "./test", "./hardhat.config.ts"],
  "exclude": ["node_modules"]
}
